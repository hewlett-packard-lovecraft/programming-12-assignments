<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<TabPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxprojectassignment.LibraryController">
   <tabs>
      <Tab text="Books">
         <content>
            <VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <HBox centerShape="false" prefHeight="14.0" prefWidth="760.0" VBox.vgrow="SOMETIMES">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" text="Refresh" />
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="560.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button mnemonicParsing="false" text="Add Book" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView fx:id="bookTable" HBox.hgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="bookTableViewIDCol" text="ID" />
                              <TableColumn fx:id="bookTableViewTitleCol" text="Title" />
                              <TableColumn fx:id="bookTableViewAuthorCol" text="Author" />
                              <TableColumn fx:id="bookTableViewUserIDCol" text="User ID" />
                              <TableColumn fx:id="bookTableViewBorrowerNameCol" text="Borrower" />
                           </columns>
                        </TableView>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab text="LibraryUsers">
         <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <HBox centerShape="false" prefHeight="14.0" prefWidth="760.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" text="Button" />
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="560.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button mnemonicParsing="false" text="Button" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TableView prefHeight="390.0" prefWidth="760.0" HBox.hgrow="ALWAYS">
                           <columns>
                              <TableColumn prefWidth="75.0" text="C1" />
                              <TableColumn prefWidth="75.0" text="C2" />
                           </columns>
                        </TableView>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
         </content>
         <content>
            <VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <HBox centerShape="false" prefHeight="14.0" prefWidth="760.0" VBox.vgrow="SOMETIMES">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" text="Refresh" />
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="560.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button mnemonicParsing="false" text="Button" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView fx:id="libraryUserTable" prefHeight="390.0" prefWidth="760.0" HBox.hgrow="ALWAYS">
                           <columns>
                              <TableColumn prefWidth="75.0" text="C1" />
                              <TableColumn prefWidth="75.0" text="C2" />
                           </columns>
                        </TableView>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
